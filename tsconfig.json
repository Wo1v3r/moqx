{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "module": "es2015",
    "removeComments": false,
    "outDir": "lib/",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "stripInternal": true,
    "lib": ["es6", "dom"]
  },
  "include": ["./test/**/*", "./src/**/*"],
  "files": ["src/index.ts"]
}
